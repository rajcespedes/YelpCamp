<%- include('partials/header') %>

<div class="container">
	<h1><%= successMessage %>x</h1>
	<div class="jumbotron mt-1 mb-3">
		<h1>List of campgrounds</h1>
		<a href="/campgrounds/new">
			<button class="btn btn-lg btn-primary">
				Add new campground					
			</button>		
		</a>
	</div>
	<div class="row row-cols-1 row-cols-md-3">
		<% campgrounds.forEach(function(campgrounds) { %>
			<div class="col mb-4">
			    <div class="card">
			      <img src="<%= campgrounds.image %>" class="card-img-top" alt="...">
			      <div class="card-body d-flex justify-content-center px-0 pb-0 pt-1">
			        <h5 class="card-title mb-1"> <%= campgrounds.name %></h5> 
			      </div>
			      <div class="card-footer d-flex justify-content-center">
			        <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary btn-sm" >More Info </a>
			      </div>     
			    </div>
		  	</div>
		<% }); %>
	</div>	
</div>	

<%- include('partials/footer') %>